<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="250"
        x:Class="Dem18_Svyatkin_Anton_409.MessageWindow"
        Title="MessageWindow">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Margin="30, 30, 30, 10" CornerRadius="20" Background="#34FADC">
                        <TextBlock Margin="10" TextWrapping="Wrap" Name="MessageTextBlock"/>
                </Border>
                
                <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="50" CornerRadius="15" HorizontalContentAlignment="Center" Content="Ok"
                        Name="OkButton" Click="OkButton_OnClick"/>
        </Grid>
</Window>
